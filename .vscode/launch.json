{
    // https://go.microsoft.com/fwlink/?linkid=830387 참조
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 현재 파일 실행",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: 모듈 실행",
            "type": "python",
            "request": "launch",
            "module": "YOUR_MODULE_NAME",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: 인자(argument) 포함 실행",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--example", "value"]
        }
    ]
}
